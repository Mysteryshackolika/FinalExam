@model List<Game>

<div class="container">
	<table>
		<thead>
			<tr>
				<th>
					Image
				</th>
				<th>
					Name
				</th>
				<th>
					Price
				</th>
				<th>
					Genre
				</th>
				<th>
					Operation
				</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td class="py-1">
						<img src="~/images/@item.ImageUrl" alt="image" />
					</td>
					<td>
						@item.Name
					</td>
					<td>
						<div class="progress">
							<div class="progress-bar bg-success" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="25"></div>
						</div>
					</td>
					<td>
						$ @item.Price
					</td>
					<td>
						@item.Genre
					</td>
					<td>
		              	<ul>
			            	<li><a asp-action="Detail" class="btn btn-info">Detail</a></li>
							<li><a asp-action="Update" class="btn btn-warning">Update</a></li>
							<li><a asp-action="Delete" class="btn btn-danger">Delete</a></li>
			            </ul>
					</td>
				</tr>

			}


		</tbody>
	</table>
</div>